{% extends "layout" %} {% block content %}
<h2>Névjegy módosítása</h2>

{% if contact.errors %}
<div class="panel panel-danger">
    <div class="panel-heading">
        <h3 class="panel-title">Hibák</h3>
    </div>
    <div class="panel-body">
        <ul>
            {% for error in contact.errors %}
            <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endif %}


<form class="form-horizontal" method="post">

    {{ csrfField }}

    <div class="form-group">
        <label for="name" class="col-lg-2 control-label">Név</label>
        <div class="col-lg-10">
            <input type="text" class="form-control" id="name" name="name" placeholder="Recept neve" value="{{ contact.name }}">
        </div>
    </div>
    <div class="form-group">
        <label for="email" class="col-lg-2 control-label">Email</label>
        <div class="col-lg-10">
            <textarea class="form-control" rows="3" id="email" name="email">{{ contact.email }}</textarea>
            <span class="help-block">Email</span>
        </div>
    </div>
    <div class="form-group">
        <label for="phone" class="col-lg-2 control-label">Telefon</label>
        <div class="col-lg-10">
            <textarea class="form-control" rows="3" id="phone" name="phone">{{ contact.phone }}</textarea>
            <span class="help-block">Telefon</span>
        </div>
    </div>
    <div class="form-group">
        <label for="area" class="col-lg-2 control-label">Szolgáltatási terület</label>
        <div class="col-lg-10">
            <textarea class="form-control" rows="3" id="area" name="area">{{ contact.area }}</textarea>
            <span class="help-block">Szolgáltatási terület</span>
        </div>
    </div>
    <div class="form-group">
        <label for="avaiable" class="col-lg-2 control-label">Elérhető</label>
        <div class="col-lg-10">
            <textarea class="form-control" rows="3" id="avaiable" name="avaiable">{{ contact.avaiable }}</textarea>
            <span class="help-block">Elérhető</span>
        </div>
    </div>
    <div class="form-group">
        <label for="category_id" class="col-lg-2 control-label">Kategória</label>
        <div class="col-lg-10">
            <select class="form-control" id="category_id" name="category_id">
        {% for category in categories %}
        <option value="{{ category.id }}"
          {% if category.id == contact.category_id %}
          selected
          {% endif %}
        >{{ category.name }}</option>
        {% endfor %}
      </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
            <button type="reset" class="btn btn-default">Mégsem</button>
            <button type="submit" class="btn btn-primary">Küldés</button>
        </div>
    </div>
</form>

{% endblock %}